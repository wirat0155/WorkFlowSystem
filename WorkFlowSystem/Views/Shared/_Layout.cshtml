<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkFlowSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" />
</head>
<body>
    @using Microsoft.AspNetCore.Http
    @{
        string role_no = Context.Session.GetString("user.role_no");
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Smart WorkFlow</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                ตรวจสอบคำร้อง
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="UserDoc" asp-action="Index">คำร้องของฉัน</a>
                                <a class="dropdown-item" asp-controller="UserDoc" asp-action="DraftList">บันทึกแบบร่าง</a>
                            </div>
                        </li>
                    </ul>
                    @if (role_no != "EMP")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Doc" asp-action="RequestList">ที่ต้องอนุมัติ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Step" asp-action="Index">สายอนุมัติ</a>
                        </li>
                    }
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <a asp-controller="Login" asp-action="Logout">ออกจากระบบ</a>
                </form>
            </div>
        </nav>
        
    </header>
    <div class="container-fluid" style="max-width: 1600px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2567 - WorkFlowSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
